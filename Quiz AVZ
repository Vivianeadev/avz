  <script>
    const questions = [
      {
        question: "Qual é a definição de 'economia verde'?",
        answers: [
          "Investir em imóveis de luxo",
          "Práticas sustentáveis para o futuro",
          "Comprar ações de empresas de tecnologia",
          "Aumentar o preço de imóveis rapidamente"
        ],
        correctAnswer: "Práticas sustentáveis para o futuro"
      },
      {
        question: "O que é Blockchain?",
        answers: [
          "Uma tecnologia para registrar transações de forma transparente",
          "Uma ferramenta para gerenciar imóveis",
          "Uma nova forma de financiar projetos imobiliários",
          "Uma forma de aumentar a rentabilidade dos imóveis"
        ],
        correctAnswer: "Uma tecnologia para registrar transações de forma transparente"
      },
      {
        question: "O que é antecipação de recebíveis?",
        answers: [
          "Vender os direitos de recebimento futuro de um imóvel",
          "Financiar a construção de novas propriedades",
          "Aumentar a quantidade de imóveis na carteira",
          "Reduzir o preço dos imóveis"
        ],
        correctAnswer: "Vender os direitos de recebimento futuro de um imóvel"
      },
      {
        question: "O que é um pool de liquidez?",
        answers: [
          "Uma forma de aumento do preço de imóveis",
          "Uma estratégia de investimento com ativos líquidos",
          "Uma ferramenta para o pagamento de empréstimos",
          "Uma modalidade de financiamento coletivo"
        ],
        correctAnswer: "Uma estratégia de investimento com ativos líquidos"
      },
      {
        question: "Qual é a principal vantagem do uso de blockchain no setor imobiliário?",
        answers: [
          "Maior controle sobre as transações",
          "Aumento no valor das propriedades",
          "Transparência e segurança nas transações",
          "Facilidade de compra e venda de imóveis"
        ],
        correctAnswer: "Transparência e segurança nas transações"
      },
      {
        question: "Como a economia verde impacta o setor imobiliário?",
        answers: [
          "Aumenta a demanda por imóveis comerciais",
          "Impede a construção de novos imóveis",
          "Incentiva a construção sustentável e o uso de recursos renováveis",
          "Reduz a quantidade de imóveis disponíveis no mercado"
        ],
        correctAnswer: "Incentiva a construção sustentável e o uso de recursos renováveis"
      },
      {
        question: "O que significa 'tokenização' no mercado imobiliário?",
        answers: [
          "A conversão de propriedades físicas em tokens digitais",
          "A venda de propriedades no mercado negro",
          "O aumento da rentabilidade dos imóveis",
          "A introdução de um novo tipo de financiamento"
        ],
        correctAnswer: "A conversão de propriedades físicas em tokens digitais"
      },
      {
        question: "Quais são os benefícios do uso de tecnologias sustentáveis nos imóveis?",
        answers: [
          "Redução do valor de mercado",
          "Aumento do consumo de energia",
          "Redução dos custos operacionais e impacto ambiental",
          "Facilidade de venda para investidores internacionais"
        ],
        correctAnswer: "Redução dos custos operacionais e impacto ambiental"
      }
    ];

    let currentQuestionIndex = 0;
    let score = 0;
    let avz = 0.00000036; // AVZ acumulado por resposta correta

    function showQuestion() {
      const questionData = questions[currentQuestionIndex];
      document.getElementById("question").textContent = questionData.question;

      const answersButtons = document.querySelectorAll(".answer-btn");
      answersButtons.forEach((button, index) => {
        button.textContent = questionData.answers[index];
        button.onclick = () => checkAnswer(questionData.answers[index]);
      });
    }

    function checkAnswer(answer) {
      const correctAnswer = questions[currentQuestionIndex].correctAnswer;

      if (answer === correctAnswer) {
        score++;
        avz += 0.00000036; // Acrescenta AVZ para cada resposta correta
        document.getElementById("resultText").textContent = "Você acertou!";
      } else {
        document.getElementById("resultText").textContent = "Você errou! A resposta correta era: " + correctAnswer;
      }

      document.getElementById("resultContainer").style.display = "block";
      document.getElementById("scoreValue").textContent = score;
      document.getElementById("avzValue").textContent = avz.toFixed(8); // Exibe AVZ com 8 casas decimais

      // Esperar 2 segundos antes de mostrar a próxima pergunta automaticamente
      setTimeout(nextQuestion, 2000);
    }

    function nextQuestion() {
      currentQuestionIndex++;

      if (currentQuestionIndex < questions.length) {
        showQuestion();
        document.getElementById("resultContainer").style.display = "none";
      } else {
        document.getElementById("question").textContent = "Fim do Jogo! Sua pontuação final é " + score;
        document.getElementById("answers").style.display = "none";
      }
    }

    // Iniciar o jogo
    showQuestion();
  </script>

