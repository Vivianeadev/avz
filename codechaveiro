  <script>
    // Lista de clientes (teste)
    const CUSTOMERS = {
      "AVZ-7K2J8": { name: "Cliente Teste", address: "0x687c95f21a7C297A628Aae7A86b863FcD783d8dC" }
    };

    function $(id){ return document.getElementById(id); }

    function validateCode(code){
      const key = code.trim().toUpperCase();
      if(CUSTOMERS[key]) return CUSTOMERS[key];
      return null;
    }

    $("btnValidate").addEventListener("click", ()=>{
      const code = $("code").value;
      const cust = validateCode(code);
      if(!cust){ alert("Código inválido!"); return; }
      $("addr").textContent = cust.address;
      $("explorer").href = `https://polygonscan.com/address/${cust.address}`;
      $("result").style.display = "block";
      $("btnConnect").disabled = false;
    });

    $("btnCopy").addEventListener("click", ()=>{
      const text = $("addr").textContent;
      navigator.clipboard.writeText(text).then(()=>{
        alert("Endereço copiado!");
      });
    });

    $("btnConnect").addEventListener("click", async ()=>{
      if(!window.ethereum){ alert("MetaMask não encontrada"); return; }
      try {
        const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
        alert("Conectado: " + accounts[0]);
      } catch (err) {
        alert("Erro na conexão ou cancelado.");
      }
    });

    // Pré-preenche código pela URL (?k=...)
    const urlParams = new URLSearchParams(window.location.search);
    const preCode = urlParams.get("k");
    if(preCode){
      $("code").value = preCode;
      const cust = validateCode(preCode);
      if(cust){
        $("addr").textContent = cust.address;
        $("explorer").href = `https://polygonscan.com/address/${cust.address}`;
        $("result").style.display = "block";
        $("btnConnect").disabled = false;
      }
    }
  </script>


